@model GerenciadorCartoesCredito.Models.Gasto

@{
    ViewData["Title"] = "Editar Gasto de R$ " + Model.Valor;
}


<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarGasto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GastoId" />
            
                <input asp-for="CartaoId" type="hidden" />
              
            <div class="form-group">
                <label asp-for="Descricao" class="control-label col-form-label-sm"></label>
                <input asp-for="Descricao" class="form-control form-control-sm" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label col-form-label-sm"></label>
                <input asp-for="Valor" class="form-control form-control-sm" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-outline-primary btn-sm" />
                <a asp-action="ListagemGastos" asp-route-cartaoId="@Model.CartaoId" class="btn btn-outline-dark btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
